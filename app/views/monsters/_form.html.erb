<%= simple_form_for @monster, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @monster.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@monster.errors.count, "error") %> prohibited this team from being saved:</h2>

          <ul>
            <% @monster.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group col-md-8">
      <%= f.text_field  :name, placeholder: 'Name', class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-8">
      <%= f.text_field :power, placeholder: 'Power', class: 'form-control' %>
    </div>

    <div class="form-group col-md-8">
      <%= f.select  :monster_type, Monster::MONSTER_CATEGORIES, prompt: "Choose type", class: 'form-control', required: true %>
    </div>

    <div class="form-group col-md-8">
      <%= f.select(:team_id, teams_for_select,  class: 'form-control', required: true)%> or
      <%= link_to 'Create New Team', :new_team , class: 'btn btn-sm btn-success' %>
    </div>

    <div class="form-group col-md-8">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    monsters_path, :class => 'btn btn-danger' %>
    </div>
<% end %>
