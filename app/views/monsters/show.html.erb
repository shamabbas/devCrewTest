<%- model_class = Monster -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @monster.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:power) %>:</strong></dt>
  <dd><%= @monster.power %></dd>
  <dt><strong><%= model_class.human_attribute_name(:monster_type) %>:</strong></dt>
  <dd><%= @monster.monster_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              monsters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_monster_path(@monster), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              monster_path(@monster),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
